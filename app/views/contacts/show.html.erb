<div class="row">

  <div class="col-md-8 col-md-offset-2">

    <!--top menu-->

    <div class="row">
      <div class="col-md-8 top-menu">
        <%= link_to contacts_path do %>
            <h3><span class="glyphicon glyphicon glyphicon-menu-left" aria-hidden="true"></span> All Contacts</h3>
        <% end %>
      </div>
      <div class="col-md-4 top-menu pull-right">
        <h3 class="pull-right">
          <% if @contact.favorite %>
              <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
          <% else %>
              <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
          <% end %>
          <%= link_to edit_contact_path(@contact) do %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
          <%= link_to @contact, method: :delete, data: {confirm: "Are you sure?"} do %>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </h3>
      </div>
    </div>

    <!--end top menu-->

    <div class="row top-buffer">
      <div class="col-md-12">
        <div class="media">
          <div class="media-left">
            <%= image_tag @contact.image, height: 140, width: 140, class: "img-thumbnail media-object" %>
          </div>
          <div class="media-body">
            <span style="font-size: 20px">Name:</span>

            <h3 class="media-heading">
              <%= @contact.name %>
            </h3>
            <br>
            <span style="font-size: 20px">Company:</span>

            <h3 class="media-heading">
              <%= @contact.company %>
            </h3>
          </div>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-md-12">
        <span style="font-size: 20px">Phone:</span>
      </div>
      <% @contact.phone.attributes.each_pair do |key, value| %>
          <% unless key == "id" or key == "contact_id" %>
              <div class="col-md-6">
                <h3 class="top-buffer-5"><%= value %></h3>
              </div>
              <div class="col-md-2 col-md-offset-4">
                <h3 class="top-buffer-5"><%= key.capitalize %></h3>
              </div>
          <% end %>
      <% end %>
    </div>

    <br>

    <div class="row">
      <div class="col-md-12">
        <span style="font-size: 20px">Address:</span>
      </div>
      <div class="col-md-6">
        <h3 class="top-buffer-5"><%= @contact.address.street %></h3>

        <h3 class="top-buffer-5"><%= @contact.address.city %>
          , <%= @contact.address.state %> <%= @contact.address.zip %></h3>
      </div>
      <div class="col-md-2 col-md-offset-4">
        <h3 class="top-buffer-5">Work</h3>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-md-12">
        <span style="font-size: 20px">Birthday:</span>
      </div>
      <div class="col-md-6 col-md-offset-right-6">
        <h3 class="top-buffer-5"><%= @contact.birthdate.strftime("%B %d, %Y") unless @contact.birthdate.blank? %></h3>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-md-12">
        <span style="font-size: 20px">Email:</span>
      </div>
      <div class="col-md-6">
        <h3 class="top-buffer-5"><%= @contact.email %></h3>
      </div>
      <div class="col-md-2 col-md-offset-4">
        <h3 class="top-buffer-5">Work</h3>
      </div>
    </div>

  </div>

</div>



