<div class="col-md-8 col-md-offset-2">
  <%= form_for @contact, html: {class: "form-horizontal"} do |f| %>
      <% if @contact.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.label :image, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.file_field :image %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :company, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :company, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :birthdate, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.date_select :birthdate, start_year: 1920, end_year: 2016 %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :website, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :website, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 col-sm- control-label">
          Favorite
        </label>

        <div class="col-sm-1">
          <div class="checkbox">
            <label>
              <%= f.check_box :favorite %>
            </label>
          </div>
        </div>

      </div>

      <!--nested address fields-->

      <div class="page-header">
        <h1>
          <small>Address:</small>
        </h1>
      </div>

      <%= f.fields_for :address do |fa| %>
          <div class="form-group">
            <%= fa.label :street, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= fa.text_field :street, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= fa.label :city, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= fa.text_field :city, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= fa.label :state, class: "col-sm-2 control-label" %>
            <div class="col-sm-4">
              <%= fa.text_field :state, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= fa.label :country, class: "col-sm-2 control-label" %>
            <div class="col-sm-4">
              <%= fa.text_field :country, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= fa.label :zip, class: "col-sm-2 control-label" %>
            <div class="col-sm-4">
              <%= fa.number_field :zip, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= fa.label :latitude, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= fa.text_field :latitude, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= fa.label :longitude, class: "col-sm-2 control-label" %>
            <div class="col-sm-10">
              <%= fa.text_field :longitude, class: "form-control" %>
            </div>
          </div>
      <% end %>

      <!--ends nested address fields-->

      <!--nested phone fields-->

      <div class="page-header">
        <h1>
          <small>Phone:</small>
        </h1>
      </div>

      <%= f.fields_for :phone do |fp| %>

          <div class="form-group">
            <%= fp.label :work, class: "col-sm-2 control-label" %>
            <div class="col-sm-6">
              <%= fp.text_field :work, class: "form-control", type: "tel" %>
            </div>
          </div>

          <div class="form-group">
            <%= fp.label :home, class: "col-sm-2 control-label" %>
            <div class="col-sm-6">
              <%= fp.text_field :home, class: "form-control", type: "tel" %>
            </div>
          </div>

          <div class="form-group">
            <%= fp.label :mobile, class: "col-sm-2 control-label" %>
            <div class="col-sm-6">
              <%= fp.text_field :mobile, class: "form-control", type: "tel" %>
            </div>
          </div>
      <% end %>

      <!--ends nested phone fields-->


      <div class="row top-buffer-30">
        <%= f.submit "Submit", class: "col-md-4 col-md-offset-2 btn btn-primary" %>
      </div>
  <% end %>
</div>